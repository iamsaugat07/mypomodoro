{
  "expo": {
    "name": "Pomodoro Timer",
    "slug": "pomodoro-timer-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "statusBarStyle": "light",
    "statusBarBackgroundColor": "#e74c3c",
    "newArchEnabled": true,
    "scheme": "pomodoroapp",
    "description": "A beautiful Pomodoro timer app to boost your productivity with Firebase sync across devices.",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#e74c3c"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pomodorotimer.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "pomodoroapp",
            "CFBundleURLSchemes": ["pomodoroapp"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#e74c3c"
      },
      "package": "com.pomodorotimer.app",
      "googleServicesFile": "./google-services.json",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
